<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <%= form_for(@kase, :html=>{:class=>'form-horizontal'}) do |f| %>
      <% if @kase.errors.any? %>
      <div id="error_explanation">
      <h2><%= pluralize(@kase.errors.count, "error") %> prohibited this kase from being saved:</h2>

      <ul>
        <% @kase.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="form-group">
      <label class="control-label col-sm-1">Case ID:</label>
      <div class="col-sm-11">
        <%= f.text_field :no, {:class=>'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-1">Name:</label>
      <div class="col-sm-11">
        <%= f.text_field :name , {:class=>'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-1">Year:</label>
      <div class="col-sm-5">
        <%= f.number_field :from_year , {:class=>'form-control'} %>
      </div>
      <label class="control-label col-sm-1">To</label>
      <div class="col-sm-5">
        <%= f.number_field :to_year , {:class=>'form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-11">
        <%= f.submit :class=>"btn btn-primary", :style=>"width:50.5%"  %>
        <%= link_to "Cancel", kases_path, :class=>'btn btn-default', :style=>"width:49%" %>
      </div>
    </div>

  <% end %>
  </div>
</div>
